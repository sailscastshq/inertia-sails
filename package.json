{
  "name": "inertia-sails",
  "version": "0.1.4",
  "description": "The Sails adapter for Inertia.",
  "main": "index.js",
  "sails": {
    "isHook": true,
    "hookName": "inertia"
  },
  "scripts": {
    "lint": "npx prettier --check .",
    "lint:fix": "npx prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sailscastshq/inertia-sails.git"
  },
  "peerDependencies": {
    "sails": ">=1"
  },
  "keywords": [
    "Inertia",
    "Sails"
  ],
  "author": "Kelvin Omereshone Oghenerhoro <kelvin@sailscasts.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sailscastshq/inertia-sails/issues"
  },
  "homepage": "https://github.com/sailscastshq/inertia-sails#readme",
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.6.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
